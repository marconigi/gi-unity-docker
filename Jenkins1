pipeline {
    // syntax https://www.jenkins.io/doc/book/pipeline/syntax/#agent
    agent { dockerfile true }

    stages {
        stage('Update') {
            steps {
                checkout([$class: 'SubversionSCM', locations: [[credentialsId: 'marconi-svn', local: '.', remote: 'https://svn.schmid.dk/svn/universe/trunk/unity']]])
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps{
                sh 'unity-editor -batchmode -buildTarget Win64 -projectPath ./UniverseUnity/ -executeMethod BuildSystem.BuildScenarioFromCommand -logFile test-windows-log.txt -buildId test-build -scenario scenario_win_quick -quit'
            }
        }
    }
}